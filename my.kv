<CreateAccountWindow>:
    name: "create"

    namee: namee
    email: email
    password: passw
    tes: tes
    
    GridLayout:
        cols:1
        Label:
            text: "Create an Account"

        GridLayout:
            cols: 2

            Label:
                text: "Name: "
            TextInput:
                id: namee
                multiline: False


            Label:
                text: "Email: "
            TextInput:
                id: email
                multiline: False


            Label:
                text: "Tes: "
            TextInput:
                id:tes
                multiline: False

            Label:
                text: "Password: "
            TextInput:
                id: passw
                multiline: False
                password: True


        Button:
            text: "Already have an Account? Log In"
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            text: "Submit"
            on_release:
                root.manager.transition.direction = "left"
                root.submit()


<LoginWindow>:
    name: "login"

    email: email
    password: password

    GridLayout:
        cols:1
        Label:
            text: "Masuk"

        GridLayout:
            cols: 2
            Label:
                text:"Email: "
            TextInput:
                id: email
                multiline: False

            Label:
                text:"Password: "
            TextInput:
                id: password
                multiline: False
                password: True

        Button:
            text: "Login"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            text: "Don't have an Account? Create One"
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()


<MainWindow>:
    tambahProker: tambahProker
    lihatKeaktivan: lihatKeaktivan
    credit:credit
    tambahAnggota: tambahAnggota
    GridLayout:

        cols:1
        Label:
            text: "HALAMAN UTAMA"

        GridLayout:
            cols:2
            Button:
                id: tambahProker
                text: "Tambah Proker: "
                on_release:
                    app.root.current = "tambpro"

            Button:
                id: lihatKeaktivan
                text: "Lihat Keaktivan Anggota: "
                on_release:
                    app.root.current = "lihkea"

            Button:
                id: credit
                text: "Tentang Aplikasi: "
                on_release:
                    app.root.current = "credits"
            Button:
                id: tambahAnggota
                text: "Tambah Anggota"
                on_release:
                    app.root.current = "tambang"

        Button:
            text: "Log Out"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"



<TambahAnggota>:

    name: "tambang"

    namaAnggota:namaAnggota
    komisariat:komisariat
    fakultas:fakultas
    jurusan:jurusan
    deputi:deputi

    GridLayout:
        cols:1
        Label:
            text: "Borang Daftar Anggota Generasi Baru Indonesia \n Wilayah Sulawesi Selatan"

        GridLayout:
            cols:2

            Label:
                text: "Nama Lengkap:"
            TextInput:
                id:namaAnggota
                multiline : False

            Label:
                text: "Komisariat:"
            TextInput:
                id:komisariat
                multiline : False

            Label:
                text: "Fakultas:"
            TextInput:
                id:fakultas
                multiline : False

            Label:
                text: "Jurusan:"
            TextInput:
                id:jurusan
                multiline: False

            Label:
                text: "Deputi:"
            TextInput:
                id:deputi
                multiline: False

        Button:
            text: "Tambah Anggota"
            on_release:
                root.tombol_tambah_anggota()

        Button:
            text: "Kembali"
            on_release:
                app.root.current = "main"



<TambahProker>:

    name: "tambpro"

    nama_proker:nama_proker
